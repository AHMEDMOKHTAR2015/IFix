@model IEnumerable<IFix.Models.ServiceAlert>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.request_status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.new_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceProviders)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.request_status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.new_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Request.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceProviders.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
